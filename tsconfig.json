{
  "$schema": "https://json.schemastore.org/tsconfig",
  "include": ["src/**/*"],
  "compilerOptions": {
    "strict": true,
    "module": "commonjs",
    "target": "es2021",
    "lib": ["dom", "es6"],
    "forceConsistentCasingInFileNames": true,
    "outDir": "build/",
    "incremental": true
  }
}
